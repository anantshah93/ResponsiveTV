<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/custom_switch_radius" />

            <solid android:color="@color/light_gray" />

            <padding
                android:left="@dimen/custom_switch_padding_3"
                android:top="@dimen/custom_switch_padding_3"
                android:right="@dimen/custom_switch_padding_24"
                android:bottom="@dimen/custom_switch_padding_3" />

            <size
                android:width="@dimen/custom_switch_width"
                android:height="@dimen/custom_switch_height" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval" >
            <solid android:color="@android:color/white" />
            <size
                android:width="@dimen/custom_switch_inner"
                android:height="@dimen/custom_switch_inner" />
        </shape>
    </item>

</layer-list>