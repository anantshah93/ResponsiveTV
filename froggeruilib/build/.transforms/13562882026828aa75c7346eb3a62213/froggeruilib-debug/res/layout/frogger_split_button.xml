<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/focusable_split_button_bg"
    android:focusable="true"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lefttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/brownpro_regular"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:textColor="@color/focusable_text"/>

    <TextView
        android:id="@+id/righttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:fontFamily="@font/brownpro_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/focusable_text"/>
        <ImageView
            android:id="@+id/statusImage"
            android:layout_width="@dimen/radio_btn_width"
            android:layout_height="@dimen/radio_btn_width"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/status_indicator"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>