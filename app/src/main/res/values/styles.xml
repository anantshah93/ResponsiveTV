<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="FroggerLibH1Style">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/_19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/brownpro_bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="FroggerLibB1Black">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/brownpro_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_12dp</item>
    </style>
    <style name="FocusableButtonStyle">
        <item name="android:textColor">@color/focusable_text</item>
        <item name="android:background">@drawable/focusable_rounded_button</item>
        <item name="android:fontFamily">@font/brownpro_bold</item>
        <item name="android:textSize">@dimen/frogger_focus_button_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
